<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_getCityId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_getCityId"
        android:layout_width="93dp"
        android:layout_height="178dp"
        android:layout_marginStart="13dp"
        android:text="@string/get_city_id"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_useCityId"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_useCityId"
        android:layout_width="201dp"
        android:layout_height="178dp"
        android:layout_marginStart="82dp"
        android:text="@string/use_city_id"
        app:layout_constraintStart_toEndOf="@+id/btn_getCityId"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="missingConstraints"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_useCityName"
        android:layout_width="116dp"
        android:layout_height="178dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        android:text="@string/use_city_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="@id/btn_useCityId"
        app:layout_constraintStart_toEndOf="@+id/btn_useCityId"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="missingConstraints"
        tools:layout_editor_absoluteY="8dp" />

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/editTextCityName"
        android:layout_width="406dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/city_name"
        android:inputType="textPersonName"
        android:text="@string/name"
        app:layout_constraintRight_toRightOf="@id/btn_useCityId"
        app:layout_constraintStart_toEndOf="@+id/btn_useCityId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_getCityId"
        android:importantForAutofill="no" />

    <ListView
        android:id="@+id/lv_weatherReport"
        android:layout_width="394dp"
        android:layout_height="112dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextCityName"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="missingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>
